# EditorConfig: http://EditorConfig.org

# Top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true


[*.{py,json,sh,html}]
indent_style = tab
tab_width = 4
indent_size = 4
trim_trailing_whitespace = true

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
